---
import ThemeToggle from '../components/ThemeToggle.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Simple Notes App</title>
		<meta name="description" content="A simple notes app with a modern Ocean Professional theme" />
		<style>
			:root {
				/* Ocean Professional - Light */
				--color-primary: #2563EB;
				--color-secondary: #F59E0B;
				--color-success: #F59E0B;
				--color-error: #EF4444;
				--bg-color: #f9fafb;
				--surface-color: #ffffff;
				--text-color: #111827;
				--text-secondary: #4b5563;
				--border-color: rgba(0, 0, 0, 0.08);
				--shadow-color: rgba(0, 0, 0, 0.08);
				--shadow-hover-color: rgba(0, 0, 0, 0.12);
				--radius-md: 12px;
				--radius-sm: 10px;
				--radius-lg: 16px;
				--focus-ring: 0 0 0 3px rgba(37, 99, 235, 0.25);
			}
			body.dark-theme {
				/* Ocean Professional - Dark */
				--bg-color: #0f172a; /* slate-900 */
				--surface-color: #111827; /* gray-900 */
				--text-color: #f9fafb;
				--text-secondary: #d1d5db;
				--border-color: rgba(255, 255, 255, 0.12);
				--shadow-color: rgba(0, 0, 0, 0.5);
				--shadow-hover-color: rgba(0, 0, 0, 0.6);
			}
			* { box-sizing: border-box; }
			html, body {
				margin: 0;
				width: 100%;
				height: 100%;
				background: var(--bg-color);
				color: var(--text-color);
				font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, "Helvetica Neue", Arial, "Apple Color Emoji", "Segoe UI Emoji";
				transition: background-color 0.3s ease, color 0.3s ease;
			}
			a { color: inherit; }
			button {
				font: inherit;
			}
			.container {
				display: grid;
				grid-template-columns: 320px 1fr;
				height: 100vh;
			}
			@media (max-width: 900px) {
				.container {
					grid-template-columns: 1fr;
					grid-template-rows: auto 1fr;
					height: auto;
					min-height: 100vh;
				}
			}
			/* Utility classes */
			.surface {
				background: var(--surface-color);
				border: 1px solid var(--border-color);
				border-radius: var(--radius-md);
				box-shadow: 0 4px 10px var(--shadow-color);
			}
			.btn {
				display: inline-flex;
				align-items: center;
				gap: 8px;
				border: 1px solid transparent;
				border-radius: 10px;
				padding: 10px 12px;
				cursor: pointer;
				transition: all 0.2s ease;
				background: var(--surface-color);
				color: var(--text-color);
			}
			.btn:focus-visible {
				outline: none;
				box-shadow: var(--focus-ring);
			}
			.btn-primary {
				background: var(--color-primary);
				color: white;
				box-shadow: 0 6px 14px rgba(37, 99, 235, 0.25);
			}
			.btn-primary:hover { filter: brightness(1.05); transform: translateY(-1px); }
			.btn-danger {
				background: var(--color-error);
				color: white;
			}
			.input, .textarea {
				width: 100%;
				border: 1px solid var(--border-color);
				border-radius: 10px;
				padding: 10px 12px;
				background: var(--surface-color);
				color: var(--text-color);
				transition: border-color 0.2s ease, box-shadow 0.2s ease;
			}
			.input:focus, .textarea:focus { outline: none; border-color: var(--color-primary); box-shadow: var(--focus-ring); }
			.textarea { min-height: 260px; resize: vertical; }
			.header {
				display: flex;
				align-items: center;
				justify-content: space-between;
				padding: 12px 16px;
				background: linear-gradient(180deg, rgba(37, 99, 235, 0.06), transparent);
				border-bottom: 1px solid var(--border-color);
			}
			.app-title {
				font-weight: 700;
				letter-spacing: 0.2px;
			}
			.badge {
				display: inline-block;
				font-size: 12px;
				color: white;
				background: var(--color-secondary);
				border-radius: 999px;
				padding: 2px 8px;
			}
		</style>
	</head>
	<body>
		<ThemeToggle />
		<slot />
	</body>
</html>
